<div class="container" ng-controller="ingredient-controller">
    <div class="panel panel-info">

        <div class="panel-heading">
            Ingredients
        </div>

        <div class="panel-body">
            <button type="button" class="btn btn-info" data-target="#AddNew" data-toggle="modal">Add Ingredient</button>
            <br />
        </div>

        <table class="table table-bordered">
            <thead class="panel-title">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Machine Stack Index</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="ing in Ingredients">
                    <td>{{ing.Id}}</td>
                    <td>{{ing.Name}}</td>
                    <td>{{ing.MachineStackIndex}}</td>
                    <td style="width:200px;">
                        <a href="#" class="btn btn-info" data-toggle="modal" data-target="#Update" ng-click="getForUpdate(ing)">Update</a>
                        <a href="#" class="btn btn-danger" id="btnDelete" data-toggle="modal" data-target="#deleteDialog" ng-click="getForDelete(ing)">Delete</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    @*Modal add new ingredient*@
    <div class="modal" id="AddNew" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h3 class="text-info">Add Ingredient</h3>
                </div>
                <div class="modal-body" style="margin-left:20px">
                    <form class="form-horizontal" name="AddNewForm">
                        <div class="form-group">
                            <label class="control-label">Name</label>
                            <input class="form-control" name="Name" ng-model="Name" type="text" placeholder="Name" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Machine Stack Index</label>
                            <input class="form-control" name="MachineStackIndex" ng-model="MachineStackIndex" type="text" placeholder="Machine Stack Index" />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnSave" data-dismiss="modal" ng-click="save()">Save</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="resetSave()">Close</button>
                </div>
            </div>
        </div>
    </div>

    @*Modal update ingredient*@
    <div class="modal" id="Update" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h3 class="text-info">Update Ingredient</h3>
                </div>
                <div class="modal-body" style="margin-left:20px">
                    <form class="form-horizontal" name="UpdateIngredientForm">
                        <div class="form-group">
                            <input class="form-control" readonly="readonly" name="UpdateId" ng-model="UpdateId" type="hidden" placeholder="Id" />
                        </div>
                        <div class="form-group">
                            <label class="text-info">Name</label>
                            <input class="form-control" name="UpdateName" ng-model="UpdateName" type="text" placeholder="Name" />
                        </div>
                        <div class="form-group">
                            <label class="text-info">Machine Stack Index</label>
                            <input class="form-control" name="UpdateMachineStackIndex" ng-model="UpdateMachineStackIndex" type="email" placeholder="Machine Stack Index" />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btnUpdate" data-dismiss="modal" ng-click="update()">Update</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    @*Modal delete ingredient*@
    <div class="modal" role="dialog" id="deleteDialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">×</button>
                    <h3 class="text-info">Are you sure you want to delete this Ingredient?</h3>
                </div>
                <div class="modal-body">
                    <div>Ingredient ID : {{UpdateId}} Ingredient Name : {{UpdateName}}</div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal" ng-click="delete(UpdateId)">Delete</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/AngularJSApp/Sandwich/Module.js"></script>
    <script src="~/AngularJSApp/Ingredient/Service.js"></script>
    <script src="~/AngularJSApp/Ingredient/Controller.js"></script>
}